<!DOCTYPE html>
<html>
	<head>
		<title>HTML5 Pong - CANVAS</title>
		
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="black" />
		<link rel="apple-touch-icon" href="assets/icon.png"/>
		
		<link type="text/css" rel="stylesheet" href="assets/game.css">
		<script type="text/javascript" src="assets/jquery.js"></script>
		<script type="text/javascript" src="assets/easeljs-0.4.2.min.js"></script>
		<script type="text/javascript" src="assets/game_canvas.js"></script>
		<script>
			
			$(document).ready(function(){
				var game = new Pong().init('#wrapper');
				
				setTimeout(function(){
					window.scrollTo(0,0);
				},100);
				
				// init stats
				var stats = $("<div id='stats'/>").width(200).height(20)
								.attr('style','position:absolute; top:0; left:0; line-height:20px; font-size:10px; font-family:Verdana; color:#000; padding:0 20px')
								.appendTo($("body"));
				
				setInterval(function(){
					stats.text(Math.round(Ticker.getMeasuredFPS()) + " FPS");
				},500);
			});
		</script>
	</head>
	<body>
		<div id="wrapper"></div>
	</body>
</html>